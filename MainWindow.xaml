<Window x:Class="SugarKanji.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SugarKanji"
        mc:Ignorable="d"
        x:Name="SugarKanji" WindowStyle="None" Topmost="True" Background="Transparent" AllowsTransparency="True">
    <Grid>
        <TextBlock FontSize="34" Name="kanjiTitle"/>
            <Image Height="900" x:Name="Img"/>
            <local:RenderElement x:Name="RenderEl"/>
        <TextBlock Height="20" Visibility="Hidden" VerticalAlignment="Bottom" Foreground="White" Background="Black" x:Name="Subtext"/>
    </Grid>
</Window>
